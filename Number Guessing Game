mport random

def number_guessing_game():
    print("ğŸ² Welcome to the Number Guessing Game! ğŸ²")
    print("I'm thinking of a number between 1 and 100.")

    number_to_guess = random.randint(1, 100)
    attempts = 0

    while True:
        guess = input("Enter your guess (or 'quit' to stop): ")

        if guess.lower() == 'quit':
            print("Thanks for playing! The number was:", number_to_guess)
            break

        if not guess.isdigit():
            print("Please enter a valid number.")
            continue

        guess = int(guess)
        attempts += 1

        if guess < number_to_guess:
            print("Too low! ğŸ“‰ Try again.")
        elif guess > number_to_guess:
            print("Too high! ğŸ“ˆ Try again.")
        else:
            print(f"ğŸ‰ Congratulations! You guessed it in {attempts} attempts! ğŸ‰")
            break

# Run the game
number_guessing_game()

