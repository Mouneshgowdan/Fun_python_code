import time
import random

def typing_speed_test():
    words = ["python", "programming", "fun", "keyboard", "challenge", "speed", "game"]
    word = random.choice(words)

    print("âŒ¨ï¸ Typing Speed Test âŒ¨ï¸")
    print("Type this word as fast as you can: ", word)

    start = time.time()
    user_input = input("ğŸ‘‰ Your input: ")
    end = time.time()

    if user_input == word:
        print(f"âœ… Correct! You took {round(end - start, 2)} seconds.")
    else:
        print("âŒ Wrong word! Try again.")

typing_speed_test()

